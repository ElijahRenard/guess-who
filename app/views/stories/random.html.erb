<center>

<% if @story %>
	<div class="statement">
		<font class="quotez">“</font>
		<%= @story.body %>
		<font class="quotez">”</font>
	</div>

  <%= form_for [@story, @vote] do |f| %>
    <div>
      <% Story::GENDERS.each do |gender| %>
        <%= f.button :name => "vote[gender]", :value => gender, :class => 'vote-button'  do %>
          <%= image_tag "btn-gender-#{gender}-normal@2x~iphone.png" %>
        <% end %>
      <% end %>
    </div>
    <div>
      <%= image_tag "gender-lime@2x~iphone.png" %>
    </div>
  <% end %>

  <div style="margin-top: 40px;">
    <%= link_to root_path do %>
      <%= image_tag "btn-next-normal@2x~iphone.png" %>
    <% end %>
  </div>
<% else %>
  <p>No stories yet :(</p>
<% end %>

</center>
